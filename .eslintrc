{
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "no-console": "warn",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "space-in-parens": ["error"],
        "space-infix-ops": "error",
        "object-curly-spacing": ["error", "always"],
        "comma-spacing": "error",
        "space-before-function-paren": ["error", "never"],
        "keyword-spacing": [
          "error", 
          { 
            "before": true, 
            "after": false,
            "overrides": {
              "import": { "after": true },
              "from": { "after": true },
              "const": { "after": true },
              "let": { "after": true }
            } 
          }
        ],
        "array-bracket-spacing": "error"
    }
  }